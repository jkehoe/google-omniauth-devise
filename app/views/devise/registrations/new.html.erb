<div class="mx-auto my-auto md:w-1/3  w-full px-6 md:px-0">
  <h2 class="text-lg font-bold text-gray-700">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt-1">
      <%= f.label :email, class: "block visible text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded border-slate-300 w-full mt-1 px-2 py-1" %>
    </div>

    <div class="mt-1">
      <%= f.label :password, class: "block visible text-gray-700" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "border rounded border-slate-300 w-full mt-1 px-2 py-1" %>
    </div>

    <div class="mt-1">
      <%= f.label :password_confirmation, class: "block visible text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border rounded border-slate-300 w-full mt-1 px-2 py-1" %>
    </div>

    <div class="mt-2">
      <%= f.submit "Sign up", class: "text-white rounded bg-indigo-600 px-6 py-2 cursor-pointer" %>
    </div>
  <% end %>
  <div class="mt-3"
    <%= render "devise/shared/links" %>
  </div>
