<div class="mx-auto my-auto md:w-1/3  w-full px-6 md:px-0">
  <h2 class="text-lg font-bold text-gray-700">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mt-1">
      <%= f.label :email, class: "block visible text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded border-slate-300 w-full mt-1 px-2 py-1" %>
    </div>

    <div class="mt-1">
      <%= f.label :password, class: "block visible text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "border rounded border-slate-300 w-full mt-1 px-2 py-1" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mt-1">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "visible text-gray-700" %>
      </div>
    <% end %>

    <div class="mt-2">
      <%= f.submit "Log in", class: "text-white rounded bg-indigo-600 px-6 py-2 cursor-pointer" %>
    </div>
  <% end %>
  <div class="mt-3"
    <%= render "devise/shared/links" %>
  </div>
</div>
